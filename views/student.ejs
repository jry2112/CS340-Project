<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head'); %>
    <%- include('partials/header'); %>
    <!-- Replace Sample Student Information with ejs links once implemented-->
    <h1> Sample Student</h1>
    <h3>This page is for editing the current student</h3>
    <div>
        <table class="table">
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Delete</th>
            </tr>
            <%
            if (studentData.length != 0){
                data = studentData[0];
                %>
                    <tr>
                        <td><%=data.Student_ID %></td>
                        <td><%=data.First_Name %></td>
                        <td><%=data.Last_Name %></td>
                        <td><%=data.Email %></td>
                        <td><%=data.Phone %></td>
                        <td><%=data.Street %> <%=data.City %> <%=data.State %> <%=data.Zip %> <%=data.Country %></td>

                        <td>
                            <form action="/students/:studentID" method="DELETE"></form>
                            <button class="btn btn-danger btn-sm delStudentButton" type="submit"> X </button>
                        </td>
                    </tr>
                
                <% } %>
            
        </table>
    </div>

    <div>
        <table class="table">
            <tr>
                <th>Courses</th>
            </tr>
            <%  if (courseData.length == 0){ 
                %>
                <tr><td>No Courses Found</td></tr>
           <% } else {

            }
                courseData.forEach(function(data){
                %>
                    <tr>
                        <td><%=data.Course_ID %></td>
                        <td><%=data.Name %></td>
                        <td><%=data.Instructor %></td>
                        <td><%=data.Price %></td>
                        <td>
                            <button class="btn btn-danger btn-sm" type="submit"> X </button>
                        </td>
                    </tr>
                
                <% }) %>
            
        </table>
    </div>

 
    <div>
        <h2>Edit Current Student</h2>
    </div>
    <form action ="" method="" id="updateStudentForm">
        <div class="row">
          <div class="col-md-3 mb-3 form-floating">
            <input type="text" class="form-control" id="firstName" name="firstName" value="<%=data.First_Name%>" required>
            <label for="firstName" class="form-label">First name</label>
            
          </div>
          <div class="col-md-3 mb-3">
            <label for="lastName" class="form-label">Last name</label>
            <input type="text" class="form-control" id="lastName" name="lastName" value="<%=data.Last_Name%>" required>
          </div>
          <div class="col-md-3 mb-3">
            <label for="email">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="<%=data.Email%>" required>
          </div>
          <div class="col-md-3 mb-3">
            <label for="phone">Phone</label>
              <input type="number" class="form-control" id="phone" name="phone" value="<%=data.Phone%>" required>
          </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-3">
                <label for="streetAddress">Street Adrress</label>
                <input type="text" class="form-control" id="streetAddress" name="streetAddress" value="<%=data.Street%>" required>
            </div>
            <div class="col-md-4 mb-3">
                <label for="city">City</label>
                <input type="text" class="form-control" id="city" name="city" value="<%=data.City%>" required>
            </div>
            <div class="col-md-2 mb-3">
                <label for="state">State</label>
                <input type="text" class="form-control" id="state" name="state" value="<%=data.State%>" required>
            </div>
            <div class="col-md-2 mb-3">
                <label for="zip">Zip Code</label>
                <input type="text" class="form-control" id="zip" name="zip" value="<%=data.Zip%>" required>
            </div>
            <div class="col-md-2 mb-3">
                <input type="text" class="form-control" id="country" name="country" value="<%=data.Country%>" required>
                <label for="country">Country</label>
            </div>
        </div>  
        <input class="btn btn-primary btn-sm" type="button" value="Update" id="updateStuButton" onclick="event.preventDefault(); updateStudent(<%=data.Student_ID%>)">Update</button>
    </form> 

    <script type="text/javascript" src="../js/students.js"></script>
    <%- include('partials/footer'); %>