<div>
    <h2>Quick Search</h2>
    <h3>Filter Enrollments based on Student information or Course information</h3>
    <div>
        <form class="centered_text">
            <fieldset>
                <!--JS coding is required for data validation as html is not sufficient-->
                <legend>Student Lookup</legend>
                <label for="student_id">Student ID:</label>
                <input class="input" type="text" name="student_id" id="student_id" size="40" maxlength="100" required>
                <br>
                <label>OR</label>
                <br>
                <label for="first_name">First Name:</label>
                <input class="input" type="text" name="first_name" id="first_name" size="40" maxlength="100" required>

                <label for="last_name">Last Name:</label>
                <input class="input" type="text" name="last_name" id="last_name" size="40" maxlength="100" required>
                <br>
                <button class="submit_button" type="submit" id="student_submit">Find By Student</button>
            </fieldset>
        </form>
    </div>
    <div>
        <form class="centered_text">
            <fieldset>
                <!--JS coding is required for data validation as html is not sufficient-->
                <legend>Course Lookup</legend>
                <label for="course_id">Course ID:</label>
                <input class="input" type="text" name="course_id" id="course_id" size="40" maxlength="100" required>
                <br>
                <label>OR</label>
                <br>
                <label for="course_name">Course Name:</label>
                <input class="input" type="text" name="course_name" id="course_name" size="40" maxlength="100" required>
                <br>
                <button class="submit_button" type="submit" id="course_submit">Find By Course</button>
            </fieldset>
        </form>
    </div>
</div>

