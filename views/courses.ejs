<%- include('partials/courses-search') %>

<br>

<div class="row">
  <div class="col-6"><h1>Courses</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addCourse" type="button" class="btn btn-primary align-self-center">Add Course</a>
  </div>


</div>


<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Course ID</th>
      <th scope="col">Course Name</th>
      <th scope="col">Currently Offered</th>
      <th scope="col">Price</th>
      <th scope="col">Instructor</th>
      <th scope="col" class="text-left">Action</th>
    </tr>
  </thead>
  <tbody>

    <% rows.forEach(element => { %>
      <tr>
        <th scope="row"><%= element.Course_ID %></th>
        <td><%= element.Name %></td>
        <td><%= element.Cur_Offer %></td>
        <td><%= new Intl.NumberFormat ('en-US', { style: 'currency', currency: 'USD' }).format(element.Price) %></td>
        <td><%= element.Instructor %></td>
        <td class="text-left">
            <a href="/editCourse/<%= element.Course_ID %>" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit </a>
            <a href="/courses/<%= element.Course_ID %>" type="button" class="btn btn-light btn-small"><i class="bi bi-trash"></i> Delete </a>
        </td>
      </tr>
    <% }); %>


  </tbody>
</table>